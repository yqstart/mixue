.tabs {
  display: flex;
  position: relative;
}

.tabs .tab {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #777777;
}

.tabs .tab.active {
  color: #000000;
  font-weight: bold;
}

.tabs .line {
  width: 60rpx;
  height: 4rpx;
  background-color: #E60012;
  position: absolute;
  bottom: -16rpx;
  left: 0;
  transition: all 0.5s;
}
