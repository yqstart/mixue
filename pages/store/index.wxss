.store .header {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  box-sizing: border-box;
}

.store .header .search {
  width: 200rpx;
  height: 58rpx;
  background-color: #e7e7e7;
  border-radius: 29rpx;
  padding: 0 26rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #d1d1d1;
}

.store .map-container {
  position: relative;
}

.store .map-container .store-map {
  width: 100%;
  height: 520rpx;
}

.store .map-container .current-icon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 18rpx;
  bottom: 22rpx;
}
